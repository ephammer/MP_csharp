<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Employer" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="100" Click="Employer_Button_Click"/>
        <Button Grid.Row="1" Content="Employee" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Click="Employee_Button_Click"/>
        <Button Grid.Row="2" Content="Contract" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="100" Click="Contract_Button_Click"/>
        <Button Grid.Row="3" Content="Specialization" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="100" Click="Specialization_Button_Click"/>

    </Grid>
</Window>
